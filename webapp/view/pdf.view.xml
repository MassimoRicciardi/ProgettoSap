<mvc:View
	controllerName="progetto4.progetto4.controller.Pdf"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	height="100%">
	<ScrollContainer
		height="100%"
		width="100%"
		horizontal="true"
		vertical="true">
		<FlexBox direction="Column" renderType="Div" class="sapUiSmallMargin">
			<FlexBox>
			</FlexBox>
			<PDFViewer source="{/Source}" title="{/Title}" height="{/Height}">
				<layoutData>
					<FlexItemData growFactor="1"/>
				</layoutData>
			</PDFViewer>
		</FlexBox>
	</ScrollContainer>
</mvc:View>